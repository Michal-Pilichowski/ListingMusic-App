<android.support.constraint.ConstraintLayout
    android:background="#009ACD	"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">

    <SeekBar
        android:id="@+id/song_seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/player_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_skip_prev"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/ic_skip_previous_white_24dp"
            app:layout_constraintTop_toBottomOf="@+id/song_seekBar" />

        <Button
            android:id="@+id/button_start_stop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/ic_play_circle_outline_white_24dp" />

        <Button
            android:id="@+id/button_skip_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/ic_skip_next_white_24dp"
            app:layout_constraintTop_toBottomOf="@+id/song_seekBar" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
